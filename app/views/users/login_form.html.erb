<h1>ログインフォーム</h1>
<% if @error_message %>
  <div class="form-error">
    <%= @error_message %>
  </div>
<% end %>
<%= form_tag("/login") do %>
  <div class="login-form">
    <p>メールアドレス</p>
    <input name="email" value="<% @email %>">
    <p>パスワード</p>
    <input type="password" name="password" value="<% @password %>"><br>

    <input class="login-btn"  type="submit" value="ログイン">
  </div>
<% end %>