<h1>詳細画面</h1>
<div class="users-show">  
  <img src="<%= "/user_images/#{@user.image_name}" %>">
  <%= @user.name %><br>
  <%= @user.email %>
  <% if @user.id == @current_user.id %>
    <%= link_to("/users/#{@user.id}/edit") do %>
      <p>編集</p>
    <% end %>
    <%= link_to("/users/#{@user.id}/destroy") do %>
      <p>削除</p>
    <% end %>
  <% end %>
</div>
<div class="unique-user-index">
  <div class="tabs">
    <%= link_to("/users/#{@user.id}") do %>
      <input id="user-posts" type="radio" name="tab_item" checked>
       <label class="tab_item" for="all">投稿</label>
    <% end %>
    
    <%= link_to("/users/#{@user.id}/likes") do %>
      <input id="user-likes" type="radio" name="tab_item">
      <label class="tab_item" for="all">いいね</label>
    <% end %>
  </div>
</div>
  <% @user.posts.each do |post|%>
    <div class="index-content">
      <img src="<%= "/user_images/#{post.user.image_name}" %>">
      <div class="user-name">
        <%= link_to(post.user.name, "/users/#{post.user.id}") %><br>
      </div>

      <div class="user-content">
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
    </div>
  <% end %>