<h1>投稿編集画面</h1>
<%= form_tag("/posts/#{@post.id}/update") do %>
<div class="edit-content">
  <% @post.errors.full_messages.each do |message| %>
    <div class="error">
      <%= message %>
    </div>
  <% end %>
  <textarea name="content" rows="4" cols="40"><%= @post.content %></textarea>
  <input type="submit" value="保存">

</div>
<% end %>